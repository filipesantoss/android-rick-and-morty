<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CharacterPageActivity">

    <ProgressBar
      android:id="@+id/character_loading"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginVertical="@dimen/spacing"
      android:padding="@dimen/small_spacing"
      android:indeterminate="true"
      android:indeterminateTint="@color/black"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/character_list" />

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/character_list"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:padding="@dimen/spacing"
      app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
      app:layout_constraintBottom_toTopOf="@id/character_loading"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:spanCount="@integer/character_list_character_per_row">

    </androidx.recyclerview.widget.RecyclerView>

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

